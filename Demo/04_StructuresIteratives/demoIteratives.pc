Algorithme Demo
DEBUT
  Variable compteur : Entier

  // <!> Initialisation
  compteur <- 0

  // <!> Condition
  TANTQUE compteur < 10 FAIRE
    Ecrire(compteur)
    
    // <!> Incr√©mentation
    compteur <- compteur + 1

  FINTQ
  
FIN
